<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@drawable/check_item_content_start_bg"
        android:orientation="vertical">
        <TextView
            style="@style/base_layout"
            android:text="处理意见"
            android:gravity="center"
            android:textSize="18sp"
            android:paddingTop="10dp"
            />
        <EditText
            android:id="@+id/lastFragment_idea"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:padding="20dp"
            android:lineSpacingMultiplier="1.5"
            android:gravity="start"
            android:background="@drawable/check_last_item_comment_bg"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="10dp"
            android:textSize="18sp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="检查人员："
                android:layout_weight="1"
                android:gravity="center"
                />
            <TextView
                android:id="@+id/lastFragment_user"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="张三"
                android:gravity="center"
                android:layout_weight="1"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="检查日期:"
                android:layout_weight="2"
                android:gravity="center"/>
            <TextView
                android:id="@+id/lastFragment_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2017-3-28"
                android:layout_weight="1"
                android:gravity="center"/>
        </LinearLayout>
    </LinearLayout>


    <Button
        android:id="@+id/btn_submit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/check_item_content_end_bg"
        android:text="@string/button_submit" />
</LinearLayout>