<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar_secAct"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay" />

    </android.support.design.widget.AppBarLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:visibility="gone">

        <ImageView
            android:id="@+id/btn_forward"
            android:layout_width="0dp"
            android:layout_height="24dp"
            android:layout_weight=".5"
            android:background="@color/colorNone"
            android:layerType="software"
            android:scaleType="centerInside"
            android:src="@drawable/vector_drawable_arrow_left" />

        <TextView
            android:id="@+id/txt_page"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="1/15"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/btn_next"
            android:layout_width="0dp"
            android:layout_height="24dp"
            android:layout_weight=".5"
            android:background="@color/colorNone"
            android:src="@drawable/vector_drawable_arrow_right" />
    </LinearLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/check_viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</LinearLayout>