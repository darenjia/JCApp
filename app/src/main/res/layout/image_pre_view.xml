<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/preview_title"
        style="@style/expandablelistview_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="18sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#898383" />

    <EditText
        android:id="@+id/preview_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:imeActionId="@+id/change_file_name"
        android:imeActionLabel="@string/action_change_short"
        android:imeOptions="actionDone"
        android:inputType="text"
        android:maxLength="20"
        android:maxLines="1"
        android:padding="10dp"
        android:text="210210.jpg"
        android:visibility="gone" />

    <TextView
        android:id="@+id/preview_file_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorNone"
        android:gravity="center"
        android:padding="10dp" />

    <android.support.v4.view.ViewPager
        android:id="@+id/preview_viewpager"
        android:layout_width="match_parent"
        android:layout_height="300dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#898383" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/preview_delete"
            style="@style/button_layout"
            android:background="@color/colorNone"
            android:text="删除" />

        <TextView
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:background="#898383" />

        <Button
            android:id="@+id/preview_cancel"
            style="@style/button_layout"
            android:background="@color/colorNone"
            android:text="取消" />
    </LinearLayout>
</LinearLayout>