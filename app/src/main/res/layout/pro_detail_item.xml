<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/check_end_bg"
    android:orientation="vertical">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TableRow android:padding="10dp">

            <TextView
                android:layout_weight="1"
                android:gravity="right|center_vertical"
                android:layout_width="0dp"
                android:text="工程登记号："
                android:layout_height="match_parent"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/pro_djh"
                android:layout_weight="2"
                android:gravity="left"
                android:text="@string/app_name"
                android:layout_width="0dp"
                android:textColor="@color/text_color"
                android:textSize="16sp" />
        </TableRow>

        <TableRow android:paddingLeft="10dp" android:paddingRight="10dp" android:paddingBottom="10dp">

            <TextView
                android:layout_weight="1"
                android:gravity="right|center_vertical"
                android:text="工程名称："
                android:layout_height="match_parent"
                android:layout_width="0dp"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/pro_gcm"
                android:layout_weight="2"
                android:gravity="left"
                android:layout_width="0dp"
                android:text="@string/app_name"
                android:textColor="@color/text_color"
                android:textSize="16sp" />
        </TableRow>

        <TableRow android:paddingLeft="10dp" android:paddingRight="10dp">

            <TextView
                android:layout_weight="1"
                android:gravity="right|center_vertical"
                android:text="工程地址："
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/pro_dz"
                android:layout_weight="2"
                android:gravity="left"
                android:text="@string/app_name"
                android:layout_width="0dp"
                android:textColor="@color/text_color"
                android:textSize="16sp" />
        </TableRow>

        <TableRow android:padding="10dp">

            <TextView
                android:layout_weight="1"
                android:gravity="right|center_vertical"
                android:layout_width="0dp"
                android:text="反馈附件："
                android:textSize="18sp" />

            <TextView
                android:id="@+id/pro_fj"
                android:layout_weight="2"
                android:gravity="left"
                android:layout_width="0dp"
                android:textColor="@color/text_color"
                android:textSize="16sp" />
        </TableRow>
    </TableLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#6b6b6b" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="10dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="工程隐患"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/pro_yh"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text=""
            android:lineSpacingMultiplier="1.2"
            android:textSize="18sp" />
    </LinearLayout>


</LinearLayout>